<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user page</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="POST" action="/update-user">

                    <div class="my-3">
                        <h3>Updating a user</h3>
                    </div>
                    <input hidden value="<%= userData.id %>" name="id" />
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" value="<%= userData.email %>" class="form-control" name="email" id="email"
                            required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" value="<%= userData.username %>" class="form-control" name="username"
                            id="username" required>
                    </div>
                    <div class="col-6"></div>

                    <div class="mt-3 col-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>